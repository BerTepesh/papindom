block append scripts
	script.
		$(".promo-detail").mCustomScrollbar({
			mouseWheel: true
		});
		$(".modal-inline-slider").fancybox({
			type: 'inline',
			fixed: true,
			width: '100%',
			autoSize: false,
			scrolling: false,
			helpers: {
				overlay: {
					css: {
						'background': 'rgba(0, 0, 0, 0.4)'
					}
				}
			}
		});
		$(".modal-inline-slider").fancybox({
			type: 'inline',
			fixed: true,
			width: '100%',
			autoSize: false,
			scrolling: false,
			helpers: {
				overlay: {
					css: {
						'background': 'rgba(0, 0, 0, 0.4)'
					}
				}
			},
			afterShow: function() {
				$("#solution-slider").flexslider({
					animation: "slide",
					slideshow: false,
					controlNav: false,
					sync: "#solution-slider-control"
				});
				$("#solution-slider-control").flexslider({
					animation: "slide",
					controlNav: false,
					slideshow: false,
					itemWidth: 127,
					itemMargin: 15,
					asNavFor: "#solution-slider"
				});
			}
		})


