extends pug/base

append vars
	- html.classList.push('page-index')
block content
	#wrapper
		#panel
		.mobile-holder
		header.header
			include pug/header
		.body
			section.section.contacts.contacts_full(style="background-image: url(images/map.jpg)")
				.container-fluid
					.contacts__content
						h2 Контакты
						p.contacts__item
							i.ficon-phone
							span пн-пт +7 915 973 80 92  с 9-00 до 18-00.
							| Визит для просмотра территории и домов согласовывается заранее.
						p.contacts__item
							i.ficon-mail
							a(href="mailto: info@papindom.ru") info@papindom.ru
						p.contacts__item
							i.ficon-marker
							| Ярославская область, пос. Туношна <br>
							| Координаты: 57.539629, 40.118635
						p.contacts__link
							span Как добраться на автобусе?
						p.contacts__link
							span Как добраться на машине?
						ul.contacts__social
							li
								a(href="#").btn
									i.ficon-vk
							li
								a(href="#").btn
									i.ficon-ig
							li
								a(href="#").btn
									i.ficon-yt
							li
								a(href="#").btn
									i.ficon-fb
		footer.footer
			include pug/footer
		.popups
			.popup.popup-solution#hall1
				.row.no-gutters
					.col-lg-7.popup-solution__slider
						.solution-slider#solution-slider
							ul.slides
								li(style="background-image: url(images/solutions/1.jpg)")
								li(style="background-image: url(images/solutions/1.jpg)")
								li(style="background-image: url(images/solutions/1.jpg)")
						.solution-slider-control#solution-slider-control
							ul.slides
								li(style="background-image: url(images/solutions/1.jpg)")
								li(style="background-image: url(images/solutions/1.jpg)")
								li(style="background-image: url(images/solutions/1.jpg)")
					.col-lg-5
						.promo-detail
							.promo-detail__main
								h3 Зал в доме №5
								hr
								.row.promo-detail__data
									.col-md-4
										p Вместимость
										b 100 человек
									.col-md-4
										p Материал пола
										b Ламинат
									.col-md-4
										p Площадь
										b 300 м<sup>2</sup>
								ul.marked-list
									li Освещение по периметру
									li Можно регулировать количество включенных ламп
									li Есть прожекторы и напольные вентиляторы
									li Регулируемое отопление
								p.promo-detail__text Просторный зал с панорамными окнами, которые выходят на реку. Зал подходит для занятий йогой, ретритов, танцев, лекций, тренингов и семинаров, презентаций, фестивалей, концертов и просмотров кино.
							.promo-detail__list
								h4 Оборудование
								ul.marked-list
									li Музыкальная система
									li 4 колонки и микшер
									li 2 микрофона и микрофонные стойки
									li Флипчат
									li Экран и проектор
									li Коврики и маты для физических занятий
									li Подушки и пледы
									li 3 гонга
block append scripts
	script.
		$('.conditions-slider .flexslider').flexslider({
			animation: "slide",
			controlNav: false
		});
