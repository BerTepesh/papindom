extends pug/base

append vars
	- html.classList.push('page-index')
block content
	#wrapper
		#panel
		.mobile-holder
		header.header
			include pug/header
		.body
			section.section
				.promo
					.flexslider
						ul.slides
							li
								.promo-slider(style="background-image:url(images/preface/1.jpg)!important")
									.promo-slider__content.promo-slider__content_invert.promo-slider__content_centered
											.container-fluid
												.promo-slider__title
													| Загородный центр для проведения мероприятий и&nbsp;отдыха
							li
								.promo-slider(style="background-image:url(images/preface/1.jpg)!important")
									.promo-slider__content.promo-slider__content_invert.promo-slider__content_centered
										.container-fluid
											.promo-slider__title
												| Загородный центр для проведения мероприятий и&nbsp;отдыха
				.container-fluid
					ul.services.services_promo.row.justify-content-center(style="margin-top: -60px;")
						li.col-sm-8.col-md-4
							a(href="#").hover-zoom
								.hover-zoom__img(style="background-image: url(images/services/1.jpg);")
								.services__icon
									i.ficon-person
								p Аренда залов <br> для мероприятий
						li.col-sm-8.col-md-4
							a(href="#").hover-zoom
								.hover-zoom__img(style="background-image: url(images/services/2.jpg);")
								.services__icon
									i.ficon-dish
								p Ресторан <br> для торжеств
						li.col-sm-8.col-md-4
							a(href="#").hover-zoom
								.hover-zoom__img(style="background-image: url(images/services/3.jpg);")
								.services__icon
									i.ficon-trees
								p Отдых и развлечения <br> на свежем воздухе
			section.section.section_unb
				.container-fluid
					.about
						img.about__img(src="images/about/1.jpg")
						.row.justify-content-between.align-items-end
							.col-md-6
								.about__content
									h3 Уютное место <br> для проведения <br>мероприятия
									hr
									.about__text
										p В нашем центре мы принимаем организационные группы с семинарами, ретритами, тренингами и мастер-классами, нацеленными на духовное, творческое и физическое развитие.
									a.btn(href="#") Подробнее о центре
							.col-md-5
								.about__caption
									i.ficon-alco
									span В нашем центре не допускается распитие алкогольных напитков
			section.section.section_unt
				.container-fluid
					ul.features.row.justify-content-around
						li.col-sm-6.col-lg-3
							.features__icon
								i.icon-homes
							p 5 уютных домов для проживания
						li.col-sm-6.col-lg-3
							.features__icon
								i.icon-halls
							p 2 оборудованных зала для семинаров площадью 200 м2 и 300 м2
						li.col-sm-6.col-lg-3
							.features__icon
								i.icon-chillout
							p Душ, летняя площадка, библиотека, ресторан и chillout-зона
						li.col-sm-6.col-lg-3
							.features__icon
								i.icon-merch
							p Бесплатная информационная и рекламная поддержка
			section.section.section_dark
				.container-fluid
					h2.text-center Для чего подойдет <br>наш центр?
					hr
					ul.services.row.justify-content-center
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/4.jpg);").services-trening
								.services__icon
									i.ficon-trening
								p Тренинги <br>и семинары
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/5.jpg);").services-dances
								.services__icon
									i.ficon-dances
								p Мастер-классы, йога,<br> танцы
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/6.jpg);").services-teambuild
								.services__icon
									i.ficon-teambuild
								p Тимбилдинги
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/7.jpg);").services-fest
								.services__icon
									i.ficon-fest
								p Фестивали <br>и ярмарки
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/8.jpg);").services-weddings
								.services__icon
									i.ficon-dish
								p Банкеты, свадьбы<br> и выпускные
						li.col-sm-6.col-md-4
							a(href="#", style="background-image: url(images/services/9.jpg);").services-solutions
								.services__icon
									i.ficon-person
								p Индивидуальные<br> решения
					.text-center
						a.btn.modal-inline-small(href="#order-popup") Заказать мероприятие
			section.section.section_green
				.container-fluid
					h2.text-center У нас есть все условия <br>для успешного мероприятия
					hr
					.conditions-list
						ul.conditions.row.justify-content-center
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-halls
								p 2&nbsp;просторных и&nbsp;светлых зала
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-conditioner
								p Кондиционер и&nbsp;отопление круглый год
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-speakers
								p Микшер, колонки и&nbsp;микрофоны
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-screen
								p Проектор, экран и&nbsp;флипчарт
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-cover
								p Коврики, маты, подушки, пледы и&nbsp;скамейки
							li.col-6.col-md-4.col-lg-2
								.conditions__icon
									i.ficon-instruments
								p Музыкальные инструменты
			.container-fluid
				.conditions-slider
					.flexslider
						ul.slides
							li
								.slider(style="background-image:url(images/conditions/1.jpg)!important")
							li
								.slider(style="background-image:url(images/conditions/1.jpg)!important")
					.conditions-slider__content
						.row
							.col-md-3.offset-1.flex-last.flex-md-first
								a(href="#").btn Выбрать решение
							.col-md-6.offset-1.flex-first.flex-md-last
								p Мы приглашаем к сотрудничеству ведуших и организаторов тренингов, семинаров, мастер-классов и фестивалей, нацеленных на творческое и духовное развитие. Мы подберем решение именно под ваше мероприятие, обеспечив вас всем необходимым.
			section.section
				.container-fluid
					h2.text-center Вариант размещения №1
					hr
					.events
						ul.row.justify-content-center
							li.col-12.col-md-4
								a(href="#").hover-zoom
									.events__img
										.hover-zoom__img(style="background-image: url(images/events/1.jpg);")
									.events__text
										span.events__date 10 декабря, 12:00
										p Предновогодняя йога-вечеринка в «Папином доме»
							li.col-12.col-md-4
								a(href="#").hover-zoom
									.events__img
										.hover-zoom__img(style="background-image: url(images/events/2.jpg);")
									.events__text
										span.events__date с 28 ноября
										p Дыхательный ретрит с Романом Карловским
							li.col-12.col-md-4
								a(href="#").hover-zoom
									.events__img
										.hover-zoom__img(style="background-image: url(images/events/3.jpg);")
									.events__text
										span.events__date 25 ноября
										p Йога-день в «Папином доме»
						.text-center
							a(href="#").btn Все мероприятия
			section.section.section_green.spacing
					.container-fluid
						.row
							.col-md-8
								p.spacing__title Хотите провести мероприятие у нас?
								p.spacing__text Отправьте нам заявку и мы подберем решение для вашего мероприятия
							.col-md-4.align-self-center
								a(href="#").btn.btn-white Отправить заявку
			section.section.contacts(style="background-image: url(images/map.jpg)")
				.container-fluid
					.contacts__content
						h2 Как с нами связаться?
						p.contacts__item
							i.ficon-phone
							| +7 915 973 80 92
						p.contacts__item
							i.ficon-mail
							a(href="mailto: info@papindom.ru") info@papindom.ru
						p.contacts__item
							i.ficon-marker
							| Ярославская область, пос. Туношна <br>
							| Координаты: 57.539629, 40.118635
						p.contacts__link
							span Как добраться на автобусе?
						p.contacts__link
							span Как добраться на машине?
						ul.contacts__social
							li
								a(href="#").btn
									i.ficon-vk
							li
								a(href="#").btn
									i.ficon-ig
							li
								a(href="#").btn
									i.ficon-yt
							li
								a(href="#").btn
									i.ficon-fb
		footer.footer
			include pug/footer
		.popups
			.popup.order-popup#order-popup
				h3 Заказать мероприятие
				hr
				.order-popup__inputs
					input(type="text", placeholder="Ваше имя").input
					input(type="text", placeholder="+7 ___ ___-__-__").input
					textarea(placeholder="Комментарий").input
				a(href="#").btn Отправить
block append scripts
	script.
		$('.conditions-slider .flexslider').flexslider({
			animation: "slide",
			controlNav: false
		});

